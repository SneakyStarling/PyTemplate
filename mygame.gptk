[config]
deadzone_triggers = 3000
mouse_scale = 6114
mouse_delay = 16
mouse_slow_scale = 50

deadzone_mode = axial
deadzone = 3000
deadzone_scale = 8
deadzone_delay = 16

[controls]
exclusive = true
overlay = clear

start = p
select = esc

guide = r

a = 1
b = 2
x = 3
y = 4

l1 = mouse_slow
r1 = hold_state hotkey
l2 = mouse_right
r2 = mouse_left
left_analog = mouse_movement

right_analog_up = w
right_analog_left = a
right_analog_down = s
right_analog_right = d
dpad = arrow_keys

[controls:hotkey]
overlay = parent

a = 5
b = 6
x = 7
y = 8

[controls:analog_0]
# Controls for devices with 0 analog sticks.
overlay = controls

# Toggle to dpad_mouse
r1 = push_state dpad_mouse

dpad = arrow_keys

[controls:dpad_mouse]
overlay = controls

# Toggle to back
r1 = pop_state

dpad = mouse_movement